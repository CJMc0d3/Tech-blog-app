<div class="card">
  <a href="/post/{{id}}">
    <div class="card-header flex-row justify-space-between align-center">
      <h2>
        {{title}}
      </h2>
      <h5>{{user.user_name}} on {{format_date created_at}}</h5>
    </div>
    <div class="card-body">
      <p class="card-text">{{body}}</p>
    </div>
  </a>
</div>